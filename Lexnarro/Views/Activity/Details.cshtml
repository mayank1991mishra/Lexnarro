@model Lexnarro.Models.Activity_Master

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div class="row">
    <div class="form-horizontal col-lg-6 col-lg-offset-2">
        <div class="alert alert-info fade in">
            <h4>Activity</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.Label("Activity")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt>
                    @Html.Label("Short Name")
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ShortName)
                </dd>

                <dt class="hidden">
                    @Html.Label("Description")
                    @*@Html.DisplayNameFor(model => model.Description)*@
                </dt>

                <dd class="hidden">
                    @Html.DisplayFor(model => model.Description)
                </dd>
            </dl>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, htmlAttributes: new { @class = "btn btn-primary" }) |
    @Html.ActionLink("Back to Activity List", "Index", new { }, htmlAttributes: new { @class = "btn btn-primary" })
</p>

@section JavaScript
{
    @Html.Raw(ViewBag.message)
}
