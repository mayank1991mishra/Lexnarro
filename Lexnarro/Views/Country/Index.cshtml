@model Lexnarro.Models.Country_Master

@*@using Lexnarro.HelperClasses;*@

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    thead tr th {
        color: #007aff;
    }
</style>

<h2>Country</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { }, htmlAttributes: new { @class = "btn btn-primary" })
</p>
<section class="panel">
    <div class="panel-body">
        <table class="table table-hover" id="dataTable">
            <thead>
                <tr>
                    <th></th>
                    <th>
                        Country Name
                    </th>

                    <th>
                        Short Name
                    </th>

                    <th>
                        Action
                    </th>
                </tr>
            </thead>
          
        </table>       
    </div>
</section>
@section JavaScript
{
    <script>
        $(function () {
           @*var userId = @UserHelper.GetUserId();*@
            var t = $('#dataTable').DataTable({
                theme: 'bootstrap',
                responsive: true,
                autoWidth: false,

                "columnDefs": [{
                    "searchable": false,
                    "orderable": false,
                    "targets": 0
                }],
                "order": [[1, 'asc']],

                "ajax": {
                    "url": '/Country/GetCountries',
                    "type": 'get',
                    "datatype": "json"
                },
                "columns": [
                    {"data": null},
                    { "data": "Name" },
                    { "data": "ShortName" },
                    
                    {
                        "data": "ID", render: (function (data, type, row) {
                            
                                return ' <a href="/Country/Edit/' + data + '" class="btn btn-success">Edit</a>' +
                                    ' | <a href="/Country/Details/' + data + '" class="btn btn-info">Details</a>' +
                                    ' | <a href="/Country/Delete/' + data + '" class="btn btn-danger">Delete</a>';
                        })
                    }
                ]
            });
            t.on('order.dt search.dt', function () {
                t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();
        });
    </script>
}

@section scripts{
    @Html.Raw(ViewBag.message)
}




