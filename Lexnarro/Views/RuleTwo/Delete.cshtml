@model Lexnarro.Models.Rule2_Master

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div class="row">
    <div class="form-horizontal col-lg-6 col-lg-offset-2">
        <div class="alert alert-block alert-danger fade in">
            <h4>Rule Two</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.Label("Name")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt>
                    @Html.Label("Units")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Unit)
                </dd>

                <dt>
                    @Html.Label("No Of Hours")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Hours)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    @Html.ActionLink("Back to list", "Index", new { }, htmlAttributes: new { @class = "btn btn-primary" })
                </div>
            }
        </div>
    </div>
</div>

@section JavaScript
{
    @Html.Raw(ViewBag.message)
}
