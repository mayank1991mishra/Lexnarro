@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Rule Two List</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { }, htmlAttributes: new { @class = "btn btn-primary" })
</p>
<section class="panel">
    <div class="panel-body">
        <table class="table table-hover" id="dataTable">
            <thead>
                <tr>
                    <th></th>
                    <th>
                        Name
                    </th>
                    <th>
                        Unit
                    </th>
                    <th>
                        Hours
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
        </table>
    </div>
</section>

@section JavaScript
{
    @Html.Raw(ViewBag.message)
}

@section scripts{
    <script>
        $(function () {
            var t = $('#dataTable').DataTable({
                theme: 'bootstrap',
                responsive: true,
                autoWidth: false,

                "columnDefs": [{
                    "searchable": false,
                    "orderable": false,
                    "targets": 0
                }],
                "order": [[1, 'asc']],

                "ajax": {
                    "url": '/RuleTwo/GetRules',
                    "type": 'get',
                    "datatype": "json"
                },
                "columns": [
                    { "data": null },
                    { "data": "Name" },
                    { "data": "Unit" },
                    { "data": "Hours" },
                    {
                        "data": "Id", render: (function (data, type, row) {

                            return ' <a href="/RuleTwo/Edit/' + data + '" class="btn btn-success">Edit</a>' +
                                ' | <a href="/RuleTwo/Details/' + data + '" class="btn btn-info">Details</a>' +
                                ' | <a href="/RuleTwo/Delete/' + data + '" class="btn btn-danger">Delete</a>';
                        })
                    }
                ]
            });
            t.on('order.dt search.dt', function () {
                t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();
        });
    </script>
}
